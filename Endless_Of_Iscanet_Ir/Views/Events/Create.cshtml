                <div class="col-12">
                    @Html.EditorFor(model => model.Related_Tags, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Related_Tags, "", new { @class = "text-danger" })
                </div>
            </div>*@

            <div class="col container form-group">

                <input type="submit" value="@Resources.ButtonResources.Create" class="btn btn-outline-success d-block w-100 form-control" name="file" />

            </div>
            <div class="col container form-group">

                <input type="file"  class="btn btn-outline-success d-block w-100 form-control-file" name="file" />

            </div>

    }

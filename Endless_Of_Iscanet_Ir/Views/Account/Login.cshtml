<h1 class="text-center text-dark">@Resources.ButtonResources.Login</h1>
<hr class="col-6 text-center border-success" />
<div class="row d-flex ">
    <div class="col col-lg-6">
        <section id="loginForm" class="container justify-content-center">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "container form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @*<h4>Use a local account to log in.</h4>*@

                @Html.ValidationSummary(true, "", new { @class = "text-warning" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-12 ">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-warning" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-12">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-warning" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-12">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-checkbox" })
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>

                    <div class="form-group">
                        <div class="col-12">
                            <input type="submit" value="@Resources.ButtonResources.Login" class="btn btn-outline-success d-block w-100" />
                        </div>
                    </div>
                    <p class="col-12">
                        @Html.ActionLink(Resources.ButtonResources.Sign_up, "Register", "Account", null, new { @class = "btn btn-success w-100 d-block" })
                    </p>
                    @* Enable this once you have account confirmation enabled for password reset functionality
                        <p>
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        </p>*@
            }
        </section>

    </div>




    <div class="col-md-6">

        <section class="col">
            <article>
                <h4 class="text-muted mt-4 pb-2"><i class="fab fa-google"></i> Gmail</h4>
                <p class="text-black-50 container text-justify">@Resources.LabelResources.GoogleLogin</p>
                <a href="#" class="btn btn-outline-primary col d-block w-100 btn-round">Login</a>
            </article>
        </section>
        <section class="col mt-2">
            <article>
                <h4 class="text-muted mt-4"><i class="fab fa-facebook"></i> FaceBook</h4>
                <p class="text-black-50 container text-justify">@Resources.LabelResources.FaceBookLogin</p>
                <a href="#" class="btn btn-outline-primary col d-block w-100 btn-round">Login</a>
            </article>
        </section>
    </div>
</div>


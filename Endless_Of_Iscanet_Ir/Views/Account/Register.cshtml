@model Endless_Of_Iscanet_Ir.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_SiteFormLayout.cshtml";
}

   @using Models.ViewModels

    <title>@ViewBag.RegisterTitle</title>

   
 

    @{
        ViewBag.RegisterTitle = Resources.ButtonResources.Sign_up + " " + Resources.LabelResources.Iranian_socity_of_cardiac_ansthesiology;
    }
    @using System.Web.Mvc.Html;
    <div class="container">
     
        <div class="row">
            <h1 class="text-black-50 col-12 text-center container border-bottom mb-5 pb-4">@Resources.ButtonResources.Sign_up @Resources.LabelResources.Iranian_socity_of_cardiac_ansthesiology</h1>

            <div class="col-md-6">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "col-12 ", role = "form" }))
            {
                   <h2 class="col border-bottom container text-dark pb-2"><i class="fas fa-key"></i> @Resources.ButtonResources.Sign_up</h2>
                    @Html.AntiForgeryToken()


                    @Html.ValidationSummary("", new { @class = "text-warning" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-12 text-center col-control-label" })
                        <div class="col-12">
                            @Html.TextBoxFor(m => m.Email, new { @class = "col-12 form-control text-center" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-12 text-center col-control-label" })
                        <div class="col-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "col-12 form-control text-center" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-12 text-center col-control-label" })
                        <div class="col-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "col-12 form-control text-center" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.ValidationSummary("", new { @class = "text-warning" })


                        @*<div>
                                @Html.LabelFor(m => m.RoleName)
                            </div>
                            <div>
                                @Html.DropDownListFor(m => m.RoleName, new SelectList(ViewBag.Roles, "Value", "Text"), new { @class = "form-control" })
                            </div>*@

                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-outline-success d-block w-100 form-control col btn-round" value="@Resources.ButtonResources.Sign_up" />
                            @Html.ActionLink(Resources.ButtonResources.Login+" ?", "Login", "Account", null, new { @class= "col-12 d-block text-center text-info txt-dcr mt-2" })
                        </div>
                    </div>
                 
                }
            </div>
            <div class="col-md-6">
                <section class="col">
                    <article>
                        <h4 class="text-muted mt-4 pb-2"><i class="fab fa-google"></i> Gmail</h4>
                        <p class="text-black-50 container text-justify">@Resources.LabelResources.GoogleLogin</p>
                        <a href="#" class="btn btn-outline-primary col d-block w-100 btn-round">Login</a>
                    </article>
                </section>
                <section class="col mt-2">
                    <article>
                        <h4 class="text-muted mt-4"><i class="fab fa-facebook"></i> FaceBook</h4>
                        <p class="text-black-50 container text-justify">@Resources.LabelResources.FaceBookLogin</p>
                        <a href="#" class="btn btn-outline-primary col d-block w-100 btn-round">Login</a>
                    </article>
                </section>
            </div>
        </div>
    </div>

    @*@section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }*@

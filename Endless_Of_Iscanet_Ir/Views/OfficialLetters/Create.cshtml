@model Models.OfficialLetter

@{

    Layout = "~/Views/Shared/_SiteFormLayout.cshtml";
}

    <h2>@Resources.ButtonResources.Create</h2>

    @using (Html.BeginForm("Create", "OfficialLetters", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-warning" })

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col col-control-label text-center" })
            <div class="col-12">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control text-center" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-warning" })
            </div>
        </div>

        <div class="form-group ">
            <div class="col-12">
                <input type="submit" value="Create" class="btn btn-outline-primary w-100 form-control" />
            </div>
          
        </div>
        <div class="form-group ">
            <div class="col-12">
                <input type="file" name="file" value="@Resources.LabelResources.Upload" class="form-control-file  w-100 btn btn-outline-dark" />
            </div>
        </div>


    }

            @section    Footer{


            }

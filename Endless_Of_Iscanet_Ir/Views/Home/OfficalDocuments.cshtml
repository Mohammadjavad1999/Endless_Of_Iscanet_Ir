@model  IEnumerable<Models.ViewModels.OfficalDocumentViewModel>
    <html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    @foreach (var item in Model)
    {
        <img src="~/Content/Files/OfficalDocuments/@item.FileName" alt="@Resources.LabelResources.OfficalDocuments" />
    }
    @foreach (var item in Model)
    {
        <div class="modal fade" id="exampleModalScrollable" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalScrollableTitle">Modal title</h5>
                        <button type = "button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <img src="~/Content/Files/OfficalDocuments/@item.FileName" alt="@Resources.LabelResources.OfficalDocuments" class="d-block w-100"/>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>

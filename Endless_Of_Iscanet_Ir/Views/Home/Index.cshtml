<article class="row">
    <section class="container ">

        <section class="col-12">
            <a class="txt-dcr" href="/LastNews/Index">
                <h2 class=" text-dark mb-4 pb-2 text-center   ">
                    @Resources.LabelResources.LastNews
                </h2>
            </a>
        </section>

        @foreach (var LastNewss in Model.LastNews)
            {

            <div class="card col-lg-4 col-md-12 Shadow" itemscope itemtype="http://schema.org/BlogPosting">

                <figure class="card-header bg-transparent" itemscope itemtype="http://schema.org/Photograph">
                    <img src="~/Content/Files/EventFiles/@LastNewss.FileName" alt="@LastNewss.LastNews_Title | @LastNewss.News_Writer" class="card-img-top w-100 d-block" itemprop="photo"/>
                    <figcaption class=" d-flex justify-content-center card-title pb-0 "itemprop="about"><h2 class="text-black-50 head-line-cards">@LastNewss.LastNews_Title</h2></figcaption>
                </figure>
                <section class="card-body">
                    <p class="card-text text-black-50 text-truncate d-block mw-100" itemprop="text">
                        @LastNewss.Abstract_Description
                    </p>
                </section>
                <div class="card-footer bg-transparent">

                    <a href="/LastNews/Details/@LastNewss.LastNewsId" itemprop="url" class="btn btn-outline-success btn-round w-100 d-block">@Resources.ButtonResources.Details</a>
                </div>
            </div>

        }
    </section>

</article>

<article class="row">
    <section class="container ">

        <section class="col-12 "><h2 class=" text-dark display-4 mb-4 pb-2 text-center">@Resources.LabelResources.Events</h2></section>

        @foreach (var Eve in Model.Events)
            {

            <div class="card col-12 col-md-4 Shadow " itemscope itemtype="http://schema.org/BlogPosting">

                <figure class="card-header bg-transparent" itemscope itemtype="http://schema.org/Photograph">
                    <img src="~/Content/Files/EventFiles/@Eve.FileName" alt="@Eve.Event_Title | @Eve.Event_Writer" class="card-img-top w-100 d-block" itemprop="photo" />
                    <figcaption class=" d-flex justify-content-center card-title pb-0" itemprop="about"><h2 class="text-black-50 head-line-cards">@Eve.Event_Title</h2></figcaption>
                </figure>
                <section class="card-body" >
                    <p class="card-text text-black-50 text-truncate d-block txt-trnc" itemprop="text">
                        @Eve.Abstract_Description
                    </p>
                </section>
                <div class="card-footer bg-transparent">
                    @*@Html.ActionLink(Resources.ButtonResources.Details, "Details", "Articles", new { id = LastNewss.LastNewsId, @class = "btn btn-outline-success d-block w-100" })*@
                    @Html.ActionLink(Resources.ButtonResources.Details, "Details", "Events", new { id = Eve.EventId }, new { @class = "btn btn-outline-success d-block btn-round" , itemprop = "url" })
                </div>
            </div>
        }
    </section>

</article>


<article class="row">
    <section class="container ">

        <section class="col-12"><h2 class=" text-dark display-4 mb-4 pb-2 border-bottom text-center   ">@Resources.LabelResources.Articles</h2></section>
        @foreach (var article in Model.Articles)
            {

            <div class="card border-success mb-3 mx-1 col-md-3 col-12 Shadow" itemscope itemtype="http://schema.org/BlogPosting">
                <div class="card-header bg-transparent border-success text-center text-muted">
                    <h3 class="card-title text-center" itemprop="name">@article.Article_Title</h3>
                </div>
                <div class="card-body text-success border-0">

                    <p class="card-text text-center text-truncate d-block txt-trnc" itemprop="text">@article.Abstract_Description</p>
                </div>
                <div class="card-footer bg-transparent"><a href="/Articles/Details/@article.ArticleId" itemprop="url" class="btn btn-outline-success btn-round d-block w-100">@Resources.ButtonResources.Details</a></div>
            </div>
        }
    </section>

</article>

@model Models.NurseDep_Article

@{
    Layout = "~/Views/Shared/_SiteUserLayout.cshtml";
}

<!DOCTYPE html>


 
    <title>@Resources.ButtonResources.Create @Resources.LabelResources.Articles @Resources.LabelResources.Of @Resources.LabelResources.NurseDepartment</title>


    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
       <h1 class="col-12 text-muted text-center headline-font">
           @Resources.ButtonResources.Create @Resources.LabelResources.Articles @Resources.LabelResources.Of @Resources.LabelResources.NurseDepartment @Resources.LabelResources.Of @Resources.LabelResources.Iranian_socity_of_cardiac_ansthesiology
       </h1>
       <hr class="text-center col-6" />

            @Html.ValidationSummary(true, "", new { @class = "text-warning" })
            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col col-control-label text-center" })
                <div class="col-12">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control text-center" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-warning" })
                </div>
            </div>
    
           

            <div class="form-group">
                @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "col col-control-label text-center" })
                <div class="col-12">
                    @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control text-center" } })
                    @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-warning" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col col-control-label text-center" })
                <div class="col-12">
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-warning" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-12">
                    <input type="submit" value="@Resources.ButtonResources.Create" class="btn btn-outline-success form-control" />
                </div>
            </div>
   
    }
    

